skinparam componentStyle uml2

package "Market MCP" {
  [Tools Interface] as Tools
  [Get Quote Tool] as GetQuote
  [Alpha Vantage Client] as AVClient
}

cloud "External Services" {
  [Alpha Vantage MCP] as AVMCP
